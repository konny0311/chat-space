%ul.chat-history{"data-message_id": message.id}
  %li.chat-each
    = image_tag message.user.image, class: 'user-image-message' if message.user.image.present? 
    = message.user.name
    %span.posteddate
      = message.created_at
    %p.message
      = message.content
    = image_tag message.image.url, class: 'image-message' if message.image.present?
