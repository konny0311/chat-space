= form_for @group do |f|
  - if @group.errors.any?
    .chat-group-form__errors
      %h2= "#{@group.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - @group.errors.full_messages.each do |message|
          %li= message
  .chat-group-form__field
    .chat-group-form__field--left
      =f.label :name, 'グループ名', class: 'chat_group-form_label'
      .chat-members 追加メンバー
    .chat-group-form__field--right
      =f.text_field :name, class: 'group-form__input', placeholder: "グループ名を入力"
      #chat-group-seletcted-members
  .chat-group-form__field
    .chat-group-form__field--left
      =f.label :name, 'チャットメンバーを追加', class: 'chat_group-form_label'
    .chat-group-form__field--right
      %input.chat-group-form__input{name: "name", placeholder: "メンバーを検索", type: "string"}
      #user-search-result
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit class: 'chat-group-form__action-btn'
